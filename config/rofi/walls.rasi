configuration {
    show-icons: true;
}

@import "~/.cache/hellwal/colors.rasi"

window {
    border: 0;
    fullscreen: true;
    background-color: @background-opaque;
}

mainbox {
    children: [listview];
}

listview {
    border: 0;
    columns: 7;
    spacing: 12px;
    padding: 24px;
    scrollbar: false;
    flow: horizontal;
}

element {
    padding: 0;
    border: 1px;
    children: [element-icon];
    border-color: @foreground;
}

element selected.normal {
    border: 2px;    
}

element-icon {
    expand: true;
    size: 330px 500px;
}
